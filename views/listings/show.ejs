<% layout("/layouts/boilerplate") %>

<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3><b><%= listing.title  %></b></h3>
        </div>

                    
            <div class="card col-8 offset-3 show-card listing-card">

                <img src="<%= listing.image %>" 
                     class="card-img-top show-img" 
                     alt="listing_image">


                <div class="card-body">
                    <p class="card-text">
                        <i>
                            Owned By :- <%= listing.owner.username  %>
                        </i>
                    </p>

                    <p class="card-text">
                        <li>
                            <%= listing.description  %>
                        </li>
                    </p>

                    <p class="card-text">
                        &#8377; <%= listing.price.toLocaleString("en-IN")  %>
                        <!-- &#8377; for Rs. Sign & toLocaleString("en-IN") used for comma in price in indian method -->
                    </p>

                    <p class="card-text">
                        <%= listing.location  %>
                    </p>

                    <p class="card-text">
                        <%= listing.country  %>
                    </p>

                </div>

                <!-- // if current user is owner of listing then only show edit and delete button will be visible   -->
                <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
                    <div class="btns">
                        <a href="/listings/<%= listing._id  %>/edit" 
                            class="btn btn-dark  edit-btn" >
                            Edit
                        </a>

                        <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                            <button class="btn btn-dark offset-5">
                                Delete 
                            </button>
                        </form>
                    </div>
                <% } %>

                

                <div class="col-8 mb-3">
                <hr>
                
                <% if(currUser) {%>
                        <h4>Leave a Review </h4>
                        
                        <form action="/listings/<%= listing._id %>/reviews" method="post"
                            novalidate class="needs-validation"> <!-- for bootstrap validation -->
                        
                            <div class="mb-3 mt-3">
                                <label for="rating" class="form-label">Rating</label>
                                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
                            </div>

                            <div class="mb-3 mt-3">
                                <label for="comment" class="form-label">Comments</label>
                                <textarea name="review[comment]" 
                                        id="comment" cols="20" rows="5"
                                        class="form-control" required></textarea>

                                <div class="invalid-feedback">
                                    Please enter a comment !!!
                                </div>
                                
                            </div>

                            <button class="btn btn-outline-dark">Submit</button>
                        
                        </form>
                <% } %>
                        <hr>

                    <h4>All Reviews</h4>
                    <ul>
                        <% for(review of listing.reviews) { %>
                        <li> 
                            <%= review.comment  %>, <%= review.rating %> stars
                        </li>
                        <% } %>
                    </ul> 

                    <p><b>All Reviews</b></p>
                    <div class="row">
                    <% for(review of listing.reviews) { %>
                        <div class="card col-5 ms-3 mb-3 "> 
                            <div class="card-body">
                                <h5 class="card-title">Jane Doe</h5>
                                <p class="card-text"><%= review.comment  %></p>
                                <p  class="card-text"><%= review.rating %> Stars</p>

                                <form method="post" class="mb-3" 
                                      action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                    <button class="btn btn-sm btn-dark">Delete</button>
                                </form>

                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>

            </div>
</body>